<%= form_with(model: bill, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :value %>
    <%= form.text_field :value %>
  </div>

  <div>
    <%= form.label :due_date %>
    <%= form.date_field :due_date %>
  </div>

  <div>
    <%= form.label :wallet %>
    <%= form.collection_select(:wallet_id, Wallet.all, :id, :name) %>
  </div>

  <%= form.submit bill.new_record? ? 'Adicionar' : 'Editar' , class: 'button' %>
<% end %>
