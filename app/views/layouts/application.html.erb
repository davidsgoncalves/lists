<!DOCTYPE html>
<html>
  <head>
    <title>Lists</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1 class="header panel">Minhas listas</h1>
    <ul class="menu-container">
      <li class="menu-item">
        <%= link_to 'Lista de compras', items_path %>
      </li>
      <li class="menu-item">
        <%= link_to 'Lista de contas', bills_path %>
      </li>
      <li class="menu-item">
        <%= link_to 'Lista de carteiras', wallets_path %>
      </li>
    </ul>
    <%= yield %>
  </body>
</html>
